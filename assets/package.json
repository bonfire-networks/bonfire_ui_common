{
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "scripts": {
    "watch.assets": "cpx 'static/**/*' ../priv/static --watch",
    "watch.js": "esbuild ./js/bonfire_live.js ./js/bonfire_basic.js --target=es2017 --bundle --sourcemap --loader:.svg=text --outdir=../priv/static/assets --watch",
    "watch.tailwindcss": "TAILWIND_MODE=build NODE_ENV=production npx tailwindcss -i ./css/app.css -o ../priv/static/assets/bonfire_basic.css --files ../../../{lib,extensions,forks,data,deps}/**/*{.leex,.heex,.sface,_live.ex,.js, .css} --jit --watch",
    "watch.css": "TAILWIND_MODE=watch NODE_ENV=development postcss ./css/app.css -o ../priv/static/assets/bonfire_basic.css -w",
    "prepare.static": "mkdir -p ../../../priv/static/ && cp -r static/*.ico ../../../priv/static/ && cp -r static/images ../../../priv/static/ && cp -r static/fonts ../../../priv/static/  && cp -r static/pwa* ../../../priv/static/",
    "build": "yarn prepare.static && yarn build.postcss && yarn build.esbuild",
    "build.esbuild": "esbuild ./js/bonfire_live.js ./js/bonfire_basic.js --target=es2017 --bundle --sourcemap --loader:.svg=text --bundle --outdir=../../../priv/static/assets",
    "build.postcss": "TAILWIND_MODE=build NODE_ENV=production postcss ./css/app.css -o ../../../priv/static/assets/bonfire_basic.css",
    "build.tailwindcss": "TAILWIND_MODE=build NODE_ENV=production npx tailwindcss -i ./css/app.css -o ../../../priv/static/assets/bonfire_basic.css --jit --minify",
    "watch.parcel": "parcel watch 'js/bonfire_*.js' --dist-dir ../priv/static/assets",
    "build.parcel": "parcel build 'js/bonfire_*.js' --dist-dir ../priv/static/assets"
  },
  "disabledScripts": {
    "preinstall": "npx only-allow yarn"
  },
  "alias": {
    "buffer": {
      "global": false
    }
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.10.2",
    "@alpinejs/intersect": "^3.10.2",
    "@floating-ui/dom": "^1.5.1",
    "@picmo/popup-picker": "^5.8.1",
    "@splidejs/splide": "^4.1.3",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "alpinejs": "^3.10.2",
    "body-scroll-lock": "^4.0.0-beta.0",
    "daisyui": "^4.3.1",
    "exifr": "^7.1.3",
    "fast-blurhash": "^1.1.2",
    "i": "^0.3.7",
    "insert-text-at-cursor": "^0.3.0",
    "npm": "^9.1.1",
    "nprogress": "^0.2.0",
    "phoenix": "link:../deps/phoenix",
    "phoenix_html": "link:../deps/phoenix_html",
    "phoenix_live_view": "link:../deps/phoenix_live_view",
    "phoenix_typed_hook": "^0.18.0",
    "picmo": "^5.8.1",
    "textarea-caret": "^3.1.0",
    "theme-change": "^2.0.2",
    "tippy.js": "^6.3.7",
    "vanilla-colorful": "^0.7.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "buffer": "^6.0.3",
    "cpx2": "^4.2.0",
    "cssnano": "^5.1.14",
    "esbuild": "^0.15.10",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0",
    "postcss-import": "^15.0.0",
    "prop-types": "^15.8.1",
    "tailwindcss": "~3.1.4",
    "tailwindcss-debug-screens": "^2.2.1"
  },
  "disabledDependencies": {
    "@iconfu/svg-inject": "^1.2.3",
    "animal-avatar-generator": "^1.0.5",
    "@rtvision/esbuild-dynamic-import": "^0.2.0",
    "@parcel/transformer-sass": "2.5.0",
    "parcel": "^2.5.0",
    "pnpm": "^7.1.3"
  }
}
