<button
  phx-click="select_smart_input"
  phx-target="#smart_input"
  phx-value-component={@component}"
  @click={"show_smart_input('#{@smart_input_prompt || l("Compose")}')"}
  type="button"
  class={@class}
>
  <Icon iconify={@icon} class="inline-block w-5 h-5" />
  <span class="">{@smart_input_prompt || l("Compose")}</span>
</button>
