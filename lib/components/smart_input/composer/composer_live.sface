<div phx-hook="Composer" id="editor" class="relative h-full px-0 md:p-2">
  <textarea
    x-model="body"
    phx-debounce="blur"
    class="w-full h-full p-2 overflow-y-hidden min-h-[250px] break-words resize-none md:p-1 composer textarea focus:outline-none focus:ring-0"
    name="html_body"
    resize="none"
    placeholder={l("Start typing...")}
  >{e(@smart_input_opts, :text, nil) || e(@smart_input_opts, :text_suggestion, nil)}</textarea>
  <ul
    tabindex="1"
    class="absolute z-50 hidden w-56 p-1 divide-y menu menu-compact bg-neutral divide-neutral-content/10"
  />
</div>
