<nav role="tabpanel" class={@class} aria-label="Switch between tabs">
  <LinkPatchLive
    :for={{tab, tab_name} <- @tabs}
    to={"#{@path_prefix}#{tab}"}
    name={"#{tab}"}
    event_handler={@event_handler}
    event_target={@event_target}
    class={
      "tab hover:bg-base-content/5 rounded-lg",
      "tab-active hover:bg-primary":
        @selected_tab == tab || to_string(@selected_tab) == to_string(tab)
    }
  >
    {localise_dynamic(tab_name)}
  </LinkPatchLive>
</nav>
