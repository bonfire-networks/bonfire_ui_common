<div
  :if={!@current_account}
  class={
    "hidden tablet-lg:flex justify-end items-center gap-3",
    "!flex tablet-lg:!hidden": @page_header
  }
>
  <LiveRedirect
    to={path(:login, :index)}
    class={
      "md:flex-1 md:hidden normal-case rounded btn-primary btn-sm btn",
      "md:btn-wide": !@page_header
    }
  >{l("Log in")}</LiveRedirect>

  <div class="dropdown dropdown-end md:hidden">
    <label tabindex="0" class="rounded btn btn-ghost btn-sm btn-square">
      <#Icon solid="DotsVertical" class="w-[18px] h-[18px] md:w-4 md:h-4 text-base-content/70" />
    </label>
    <ul
      tabindex="0"
      class="p-2 mt-4 rounded shadow menu dropdown-content bg-neutral w-60 md:w-48 text-neutral-content"
    >
      <li :if={!Bonfire.Me.Accounts.instance_is_invite_only?()}><LiveRedirect to={path(:signup)}>{l("Sign up")}</LiveRedirect></li>
      <!-- <li><LiveRedirect class="text-neutral-content" to="/about">{l("About")}</LiveRedirect></li> -->
      <li><LiveRedirect class="text-neutral-content" to="/conduct">{l("Code of conduct")}</LiveRedirect></li>
      <li><LiveRedirect class="text-neutral-content" to="/privacy">{l("Privacy")}</LiveRedirect></li>
      <li><LiveRedirect
          class="text-neutral-content"
          :if={current_user(@__context__) || Config.get([Bonfire.UI.Me.UsersDirectoryLive, :show_to]) == :guests}
          to="/users"
        >{l("Users")}</LiveRedirect>
      </li>
      <li><a class="text-neutral-content" href="https://bonfirenetworks.org/" to="/privacy">{l("About bonfire")}</a></li>
    </ul>
  </div>
</div>
