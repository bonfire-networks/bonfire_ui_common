<nav role="navigation" aria-label={l("Extension navigation")}>
  <ul class="hidden space-y-1 menu md:block">
    {#for nav <- @items}
      {#case nav}
        {#match %{} = nav}
          <li :if={!nav[:exclude_from_nav]}>
            <Bonfire.UI.Common.WidgetLive
              widget={nav}
              page={@page}
              selected_tab={@selected_tab}
              data={e(nav, :props, [])}
            />
          </li>
        {#match _}
          <li :for={subnav <- nav} :if={!subnav[:exclude_from_nav]}>
            <Bonfire.UI.Common.WidgetLive
              widget={subnav}
              page={@page}
              selected_tab={@selected_tab}
              data={e(subnav, :props, [])}
            />
          </li>
      {/case}
    {/for}
  </ul>

  <div class="mx-3 md:hidden">
      <ul class="justify-between w-full rounded menu menu-horizontal bg-base-100">
      {#for nav <- @items}
        {#case nav}
          {#match %{} = nav}
            <li :if={!nav[:exclude_from_nav]}>
              <LiveRedirect to={e(nav, :href, nil)} class="flex flex-col gap-1 text-center">
                <Icon iconify={e(nav, :icon, nil)} class="w-5 h-5 text-base-content/80" />
                <div class="text-xs font-light uppercase text-base-content/70">{e(nav, :name, "")}</div>
              </LiveRedirect>
            </li>
          {#match _}
            <li :for={subnav <- nav} :if={!subnav[:exclude_from_nav]}>
              <LiveRedirect to={e(subnav, :href, nil)} class="flex flex-col gap-1 text-center">
                <Icon iconify={e(subnav, :icon, nil)} class="w-5 h-5 text-base-content/80" />
                <div class="text-xs font-light uppercase text-base-content/70">{e(nav, :name, "")}</div>
              </LiveRedirect>
            </li>
          {/case}
      {/for}   
    </ul>

