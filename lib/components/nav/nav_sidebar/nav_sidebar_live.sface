  <!-- TODO: deprecate -->
  {#if ulid(@current_user)}
    <!-- USER NAV SIDEBAR -->
    {#if is_list(@sidebar_widgets[:users][:main])}
      <Dynamic.Component
        :for={{component, component_assigns} <- @sidebar_widgets[:users][:main]}
        module={component}
        {...component_assigns}
      />
    {/if}
  {#else}
    <!-- GUEST NAV SIDEBAR -->
    <Dynamic.Component
      :for={{component, component_assigns} <- @sidebar_widgets[:guests][:main] || []}
      module={component}
      {...component_assigns}
    />
  {/if}
