
<li>
  <LiveRedirect 
    to={path(Config.get(:user_home_page, Bonfire.UI.Social.HomeLive))} 
    class={"text-sm rounded relative",  "font-bold bg-base-content/10": @page == "feed"}
  >
    <Icon solid="Newspaper" class={"w-5 h-5 text-base-content/80", "!text-base-content": @page == "feed"} />
    <span :if={@page == "feed"} class="sr-only">{l "Current Page:"} </span>
    {l "My feed"}
  </LiveRedirect>
</li>

