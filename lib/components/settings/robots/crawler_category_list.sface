<div class="space-y-6">
  <h3 class="text-xl font-bold">Block Crawlers by Category</h3>

  {#for {category, crawlers} <- CrawlerBoundaries.crawlers_by_category()}
    <CrawlerCategory
      category={category}
      category_info={CrawlerBoundaries.get_category_info(category)}
      crawlers={crawlers}
      settings={@settings}
      on_toggle_category={@on_toggle_category}
      on_toggle_crawler={@on_toggle_crawler}
    />
  {/for}
</div>