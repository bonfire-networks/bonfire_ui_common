<select name="ui[font_family]" class="w-full max-w-xs select bg-base-content/10">
  {#for f <- Settings.get([:ui, :font_families], ["Inter"], @__context__)}
    <option class="" value={f} selected={if @font_family == f, do: "selected"}>
      {f}
    </option>
  {#else}
    <option>{l("No known fonts")}</option>
  {/for}
</select>
