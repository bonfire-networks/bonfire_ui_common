            </LinkPatchLive>
          </li>

          <li>
            <LinkPatchLive
              to={~p"/settings/instance/icons"}
              class={
                "!px-4 !py-2",
                "bg-base-content/10": @selected_tab == "icons"
              }
            >
              <span class="text-sm">{l("Icons")}</span>
            </LinkPatchLive>
          </li>
        </ul>
      </details>
    </li>

