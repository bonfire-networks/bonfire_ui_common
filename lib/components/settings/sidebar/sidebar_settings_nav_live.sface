      <LiveRedirect
        to={~p"/settings/invites"}
        class={
          "flex items-center gap-3 rounded-md py-2 px-2 w-full",
          "bg-base-content/10 ": @selected_tab == "invites"
        }
      >
        <Icon
          solid="Mail"
          class={"w-4 h-4 font-normal text-base-content/70", "": @selected_tab == "invites"}
