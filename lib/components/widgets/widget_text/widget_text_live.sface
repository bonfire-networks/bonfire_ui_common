<Bonfire.UI.Common.WidgetLive 
  widget_title={e(assigns, :widget_title, nil)}
>
  <div>
    <div 
      :if={e(assigns, :banner_image, nil)} 
      class="bg-bottom bg-no-repeat bg-cover h-[250px]" style={"background-image: url(#{e(assigns, :banner_image, nil)})"}></div>

    <div class="p-3 prose">
      {templated e(assigns, :text, "text goes here"), e(assigns, :info, nil)}
    </div>
  </div>
</Bonfire.UI.Common.WidgetLive>